<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/ProductImaggid"
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp" />

            <TextView
                android:id="@+id/ProductNameid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@id/ProductImaggid"
                android:text="Product Name"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/productbrandid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ProductNameid"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@id/ProductImaggid"
                android:text="Brand Name" />

            />

            <TextView
                android:id="@+id/ProductDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/productbrandid"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@id/ProductImaggid"
                android:maxLines="3"
                android:text="Description" />

            <TextView
                android:id="@+id/productlinkid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ProductDescription"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@id/ProductImaggid"
                android:maxLines="1"
                android:text="ProductLink" />


            <TextView
                android:id="@+id/ProductPriceID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ProductImaggid"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:text="Product price" />


        </RelativeLayout>


    </androidx.cardview.widget.CardView>


</RelativeLayout>